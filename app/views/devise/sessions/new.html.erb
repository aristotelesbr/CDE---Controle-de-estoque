<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.label :email, t('sessions.new.email') %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :password, t('sessions.new.password') %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>
  <div>
    <%= link_to t('actions.new_password'), new_password_path(resource_name) %>
  </div>

<!--   <% if devise_mapping.rememberable? -%>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%> -->

  <div>
    <%= f.submit t('helpers.submit.session.create'), class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>


