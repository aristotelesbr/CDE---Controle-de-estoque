<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :email, t('registration.new.email') %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :password, t('registration.new.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√©res no minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
  </div>

  <div>
    <%= f.label :password_confirmation, t('registration.new.password_confirmation') %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div>
    <%= f.submit t('helpers.submit.registration.create'), class: 'btn btn-primary btn-lg'   %>
  </div>
<% end %>


