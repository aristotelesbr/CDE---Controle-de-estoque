<header>
  <%= link_to root_path, class: 'logo' do %>
    <%= image_tag 'logo.png' %>
  <% end %>

    <nav>
      <% if user_signed_in? %>
      <ul>
        <li>
          <%= link_to 'Sair', destroy_user_session_path, method: :delete %>
        </li>
      </ul>
      <% else %>
        <ul>
          <li>
            <%= link_to 'Cadastrar', new_user_registration_path %> |
            <%= link_to 'Entrar', new_user_session_path %>
          </li>
        </ul>
      <% end %>
    </nav>


  <h1><%= page_title %></h1><br/>
  <% if user_signed_in? %>
    <hr>
    <ul class="nav nav-tabs nav-justified">
      <li role="presentation"><%= link_to 'Produtos', new_product_path %></li>
      <li role="presentation"> <%= link_to 'Vendas', new_sale_path %></li>
      <li role="presentation"><%= link_to 'Fornecedor', new_provider_path  %></li>
      <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        Relatórios <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Detalhamento vendas', reports_index_path %></li>
        <li><%= link_to 'Lista de fornecedores', providers_path %></li>
        <li><%= link_to 'Produtos cadastrados', products_path %></li>
        <li><%= link_to 'Vendas por mês', sales_path %></li>
      </ul>
    </ul>
  <% end %>
</header>
